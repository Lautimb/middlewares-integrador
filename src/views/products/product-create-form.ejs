<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		
		<div class="col-12">
			<form action="/products/create" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<% if (typeof errors != 'undefined'){ %>
							<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input"
							value="<%= typeof old.name == 'undefined' ? '' : typeof old.name == 'undefined' ? '' : old.name %>">
							<small class="errors-form"><%= typeof errors.name == 'undefined' ? '' : errors.name.msg %></small>
						<% }else{ %>
							<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input">
						<% }%>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<% if (typeof errors != 'undefined'){ %>
							<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" 
							value="<%= typeof old.price == 'undefined' ? '' : typeof old.price == 'undefined' ? '' : old.price %>">
							<small class="errors-form"><%= typeof errors.price == 'undefined' ? '' : errors.price.msg %></small>
						<% }else{ %>
							<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
						<% }%>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<% if (typeof errors != 'undefined'){ %>
							<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input"
							value="<%= typeof old.discount == 'undefined' ? '' : typeof old.discount == 'undefined' ? '' : old.discount %>">
							<small class="errors-form"><%= typeof errors.discount == 'undefined' ? '' : errors.discount.msg %> </small>
						<% }else{ %>
							<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
						<% }%>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="" disabled>Elegí</option>
							<option value="visited" selected>Últimos agregados</option>
							<option value="in-sale">En oferta</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>

					<div class="col-12 form-label">
						<label for="image" >Insertar imagen</label>
						<% if (typeof errors != 'undefined'){ %>
							<input type="file" name="image">
							<small class="errors-form"><%= typeof errors.image == 'undefined' ? '' : errors.image.msg %></small>
						<% }else{ %>
							<input type="file" name="image">
						<% }%>
					</div>

					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>